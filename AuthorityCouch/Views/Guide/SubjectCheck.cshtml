@if (Model.Name != null && Model.Name.Results.Docs.Count > 0)
{
    <h4>Name Authorities</h4>
    <table class="table table-striped">
        <thead>
            <tr>
                <th></th>
                <th>Name</th>
                <th>Type</th>

            </tr>
        </thead>
        @foreach (var doc in Model.Name.Results.Docs)
        {
            <tr>
                <td>
                    @if (doc.personalNameCreator != null)
                    {
                        var match = Model.AsAgents.Find(x => x.person_name == doc.authoritativeLabel);
                        if (match != null && match.role_id == 878 && match.agent_person_id.ToString() == doc.archivesSpaceUri.Replace("http://archivesspace.ecu.edu/agents/agent_person/", ""))
                        {
                            <i class="fa fa-check-circle text-success"></i>
                        }
                    }
                    else if (doc.personalNameSource != null)
                    {
                        var match = Model.AsAgents.Find(x => x.person_name == doc.authoritativeLabel);
                        if (match != null && match.role_id == 879 && match.agent_person_id.ToString() == doc.archivesSpaceUri.Replace("http://archivesspace.ecu.edu/agents/agent_person/", ""))
                        {
                            <i class="fa fa-check-circle text-success"></i>
                        }
                    }
                    else if (doc.familyNameCreator != null)
                    {
                        var match = Model.AsAgents.Find(x => x.family_name == doc.authoritativeLabel);
                        if (match != null && match.role_id == 878 && match.agent_family_id.ToString() == doc.archivesSpaceUri.Replace("http://archivesspace.ecu.edu/agents/agent_family/", ""))
                        {
                            <i class="fa fa-check-circle text-success"></i>
                        }
                    }
                    else if (doc.familyNameSource != null)
                    {
                        var match = Model.AsAgents.Find(x => x.family_name == doc.authoritativeLabel);
                        if (match != null && match.role_id == 879 && match.agent_family_id.ToString() == doc.archivesSpaceUri.Replace("http://archivesspace.ecu.edu/agents/agent_family/", ""))
                        {
                            <i class="fa fa-check-circle text-success"></i>
                        }
                    }
                    else if (doc.corporateNameCreator != null)
                    {
                        var match = Model.AsAgents.Find(x => x.corp_name == doc.authoritativeLabel);
                        if (match != null && match.role_id == 878 && match.agent_corporate_entity_id.ToString() == doc.archivesSpaceUri.Replace("http://archivesspace.ecu.edu/agents/agent_corporate_entity/", ""))
                        {
                            <i class="fa fa-check-circle text-success"></i>
                        }
                    }
                    else if (doc.corporateNameSource != null)
                    {
                        var match = Model.AsAgents.Find(x => x.corp_name == doc.authoritativeLabel);
                        if (match != null && match.role_id == 879 && match.agent_corporate_entity_id.ToString() == doc.archivesSpaceUri.Replace("http://archivesspace.ecu.edu/agents/agent_corporate_entity/", ""))
                        {
                            <i class="fa fa-check-circle text-success"></i>
                        }
                    }
                </td>
                <td>@doc.authoritativeLabel</td>
                <td>
                    @if (doc.personalNameCreator != null && doc.personalNameCreator.Contains(ViewBag.ArchivesSpaceUrl))
                    {
                        <span>personalNameCreator</span>
                    }
                    else if (doc.personalNameSource != null && doc.personalNameSource.Contains(ViewBag.ArchivesSpaceUrl))
                    {
                        <span>personalNameSource</span>
                    }
                    else if (doc.familyNameCreator != null && doc.familyNameCreator.Contains(ViewBag.ArchivesSpaceUrl))
                    {
                        <span>familyNameCreator</span>
                    }
                    else if (doc.familyNameSource != null && doc.familyNameSource.Contains(ViewBag.ArchivesSpaceUrl))
                    {
                        <span>familyNameSource</span>
                    }
                    else if (doc.corporateNameCreator != null && doc.corporateNameCreator.Contains(ViewBag.ArchivesSpaceUrl))
                    {
                        <span>corporateNameCreator</span>
                    }
                    else if (doc.corporateNameSource != null && doc.corporateNameSource.Contains(ViewBag.ArchivesSpaceUrl))
                    {
                        <span>corporateNameSource</span>
                    }
                </td>
            </tr>
        }
