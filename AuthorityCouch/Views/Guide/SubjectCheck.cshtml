    if (topics.Count > 0)
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th></th>
                    <th>Subject</th>
                    <th>Type</th>

                </tr>
            </thead>
            @foreach (var doc in topics)
            {
                <tr>
                    <td>
                        @{ var match = Model.AsSubjects.Find(x => x.subject == doc.authoritativeLabel); }
                        @if (match != null && match.type == "topical" && match.id.ToString() == doc.archivesSpaceUri.Replace("http://archivesspace.ecu.edu/subjects/", ""))
                        {
                            <i class="fa fa-check-circle text-success"></i>
                        }
                    </td>
                    <td><a href="@Url.Action("Subject", "Assign", new {id = doc._id})">@doc.authoritativeLabel</a></td>
                    <td>
                        @if (doc.topic.Contains(ViewBag.ArchivesSpaceUrl))
                        {
